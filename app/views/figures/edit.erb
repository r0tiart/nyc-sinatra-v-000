<h1>Edit Current Figure</h1>

<form method="post" action="/figures/<%=@figure.id%>">
	
	<h2><%=@figure.name %></h2> 
	New Name: <input type="text" name="figure[name]" id="figure_name">

	<br><br>

	Please select titles: <br><br> 
	<% @titles.each do |title| %>
		<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title[name]" <%="checked" if @figure.titles.include?(title)%>> <%=title.name%> </input>
	<%end%> <br><br>

	<label>Or Create a New Title</label>
	<input type="text" name='title[name]' id="new_title">

	<br>
	<br>

	Please select landmarks: <br><br>
	<% @landmarks.each do |landmark| %>
		<input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_name" <%="checked" if @figure.landmarks.include?(landmark)%>> <%=landmark.name%> </input>
	<%end%> <br><br>

	<br>
	<br>

	<label>Or Create a New Landmark</label>

	<br><br>

	New Landmark Name: <input type="text" name="landmark[name]" id="new_landmark">
	Year Completed: <input type="text" name="landmark[year_completed]">
	<br><br>

	<input type="submit" name="submit" value="Edit Figure">
</form>